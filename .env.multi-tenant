# App Configuration
APP_NAME="App Oficina"
APP_ENV=local
APP_KEY=base64:your-key-here
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://localhost:4500
APP_LOCALE=pt_BR

# Central Database (stores tenants, plans, etc)
DB_CONNECTION=central
DB_HOST=oficina-db
DB_PORT=3306
DB_DATABASE=app_oficina_central
DB_USERNAME=root
DB_PASSWORD=root

# Tenancy
TENANCY_DATABASE_AUTO_DELETE=false
TENANCY_DATABASE_AUTO_DELETE_USER=false

# Cache
CACHE_STORE=database
CACHE_PREFIX=

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=database

# Mail
MAIL_MAILER=smtp
MAIL_HOST=oficina-mail-server
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@app-oficina.com"
MAIL_FROM_NAME="${APP_NAME}"
